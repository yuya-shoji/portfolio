<div class="container">
  <h2 class="mb-3">マイページ</h2>
  <%= render 'layouts/userinfo' %>
    <div class="col-lg-8">
    <%= month_calendar events: @reservations do |date, reservations| %>

      <%= date.day %>
      <% reservations.each do |reservation| %>
      <div>
        <%= link_to reservation.title, reservation_path(reservation.id) %>
      </div>
      <% end %>
    <% end %>
       <%= link_to "新規の予約と履歴はこちら", reservations_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>