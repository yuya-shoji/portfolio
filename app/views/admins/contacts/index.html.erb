<h2>問い合わせ一覧</h2>
<% @contacts.each do |contact| %>
<div>
  <%= contact.question %>
<% if contact.answer.present? %>
<p><%= link_to contact.question, admins_reservation_contact_path(params[:reservation_id],contact.id) %></p>
<% else %>
<p><%= link_to "返答する", admins_reservation_contact_path(params[:reservation_id],contact.id), class: 'btn btn-primary' %></p>

<p><%= link_to "一覧に戻る", admins_reservations_path, class: 'btn btn-primary' %> </p>
<% end %>
</div>
<% end %>
