<h2>会員新規登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6">
    <%= f.label :name,"名前" %><br />
    <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :address,"住所" %><br />
    <%= f.text_field :address %>
    </div>
  </div>

  <div class="field">
    <%= f.label :telephone_number,"電話番号" %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
